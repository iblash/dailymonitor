<div>
  <div>
    <h1>
      List of all other teams
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new other team
    </h2>

    <form action="/insert_other_team" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="specialty_box">
          Specialty
        </label>

        <input type="text" id="specialty_box" name="query_specialty">
      </div>

      <button>
        Create other team
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Position
        </th>

        <th>
          Specialty
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_other_teams.each do |an_other_team| %>
      <tr>
        <td>
          <%= an_other_team.id %>
        </td>

        <td>
          <%= an_other_team.first_name %>
        </td>

        <td>
          <%= an_other_team.last_name %>
        </td>

        <td>
          <%= an_other_team.phone_number %>
        </td>

        <td>
          <%= an_other_team.position %>
        </td>

        <td>
          <%= an_other_team.specialty %>
        </td>

        <td>
          <%= time_ago_in_words(an_other_team.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_other_team.updated_at) %> ago
        </td>

        <td>
          <a href="/other_teams/<%= an_other_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
