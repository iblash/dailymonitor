<div>
  <div>
    <h1>
      Other team <%= @the_other_team.first_name %>  <%= @the_other_team.last_name %> details
    </h1>

    <div>
      <div>
        <a href="/other_teams">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_other_team/<%= @the_other_team.id %>">
          Delete other team
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_other_team.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_other_team.last_name %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @the_other_team.phone_number %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @the_other_team.position %>
      </dd>

      <dt>
        Specialty
      </dt>
      <dd>
        <%= @the_other_team.specialty %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_other_team.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_other_team.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit other team
    </h2>

    <form action="/modify_other_team/<%= @the_other_team.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_other_team.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_other_team.last_name %>">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number" value="<%= @the_other_team.phone_number %>">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position" value="<%= @the_other_team.position %>">
      </div>

      <div>
        <label for="specialty_box">
          Specialty
        </label>

        <input type="text" id="specialty_box" name="query_specialty" value="<%= @the_other_team.specialty %>">
      </div>

      <button>
        Update other team
      </button>
    </form>
  </div>
</div>

<hr>
