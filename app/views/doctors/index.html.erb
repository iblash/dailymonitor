<div>
  <div>
    <h1>
      List of all doctors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new doctor
    </h2>

    <form action="/insert_doctor" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="specialty_box">
          Specialty
        </label>

        <input type="text" id="specialty_box" name="query_specialty">
      </div>

      <button>
        Create doctor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table" border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Position
        </th>

        <th>
          Specialty
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_doctors.each do |a_doctor| %>
      <tr>
        <td>
          <%= a_doctor.id %>
        </td>

        <td>
          <%= a_doctor.first_name %>
        </td>

        <td>
          <%= a_doctor.last_name %>
        </td>

        <td>
          <%= a_doctor.phone_number %>
        </td>

        <td>
          <%= a_doctor.position %>
        </td>

        <td>
          <%= a_doctor.specialty %>
        </td>

        <td>
          <%= time_ago_in_words(a_doctor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_doctor.updated_at) %> ago
        </td>

        <td>
          <a href="/doctors/<%= a_doctor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
