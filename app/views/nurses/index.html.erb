<div>
  <div>
    <h1>
      List of all nurses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new nurse
    </h2>

    <form action="/insert_nurse" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="specialty_box">
          Specialty
        </label>

        <input type="text" id="specialty_box" name="query_specialty">
      </div>

      <button>
        Create nurse
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Position
        </th>

        <th>
          Specialty
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_nurses.each do |a_nurse| %>
      <tr>
        <td>
          <%= a_nurse.id %>
        </td>

        <td>
          <%= a_nurse.first_name %>
        </td>

        <td>
          <%= a_nurse.last_name %>
        </td>

        <td>
          <%= a_nurse.phone_number %>
        </td>

        <td>
          <%= a_nurse.position %>
        </td>

        <td>
          <%= a_nurse.specialty %>
        </td>

        <td>
          <%= time_ago_in_words(a_nurse.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_nurse.updated_at) %> ago
        </td>

        <td>
          <a href="/nurses/<%= a_nurse.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
