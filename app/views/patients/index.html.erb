<div>
  <div>
    <h1>
      List of all patients
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new patient
    </h2>

    <form action="/insert_patient" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number">
      </div>

      <div>
        <label for="transplant_type_box">
          Transplant type
        </label>

        <input type="text" id="transplant_type_box" name="query_transplant_type">
      </div>

      <div>
        <label for="transplant_date_box">
          Transplant date
        </label>

        <input type="text" id="transplant_date_box" name="query_transplant_date">
      </div>

      <div>
        <label for="doctor_id_box">
          Doctor
        </label>

        <input type="text" id="doctor_id_box" name="query_doctor_id">
      </div>

      <div>
        <label for="nurse_id_box">
          Nurse
        </label>

        <input type="text" id="nurse_id_box" name="query_nurse_id">
      </div>

      <div>
        <label for="other_team_id_box">
          Other team
        </label>

        <input type="text" id="other_team_id_box" name="query_other_team_id">
      </div>

      <div>
        <label for="medicine_id_box">
          Medicine
        </label>

        <input type="text" id="medicine_id_box" name="query_medicine_id">
      </div>

      <div>
        <label for="hospital_id_box">
          Hospital
        </label>

        <input type="text" id="hospital_id_box" name="query_hospital_id">
      </div>

      <button>
        Create patient
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table" border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Transplant type
        </th>

        <th>
          Transplant date
        </th>

        <th>
          Doctor
        </th>

        <th>
          Nurse
        </th>

        <th>
          Other team
        </th>

        <th>
          Medicine
        </th>

        <th>
          Hospital
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_patients.each do |a_patient| %>
      <tr>
        <td>
          <%= a_patient.id %>
        </td>

        <td>
          <%= a_patient.first_name %>
        </td>

        <td>
          <%= a_patient.last_name %>
        </td>

        <td>
          <%= a_patient.phone_number %>
        </td>

        <td>
          <%= a_patient.transplant_type %>
        </td>

        <td>
          <%= a_patient.transplant_date %>
        </td>

        <td>
          <%= a_patient.doctor_id %>
        </td>

        <td>
          <%= a_patient.nurse_id %>
        </td>

        <td>
          <%= a_patient.other_team_id %>
        </td>

        <td>
          <%= a_patient.medicine_id %>
        </td>

        <td>
          <%= a_patient.hospital_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_patient.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_patient.updated_at) %> ago
        </td>

        <td>
          <a href="/patients/<%= a_patient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
